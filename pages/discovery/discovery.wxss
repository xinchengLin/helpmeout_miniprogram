/* pages/discovery/discovery.wxss */
.container {
  padding: 0;
  overflow: hidden;
  justify-content: flex-start;
}

.tipText {
  margin-bottom: 0;
}

.notice{
  position: relative;
}
.noticeSwiper{
  width: 150%;
  height: 80rpx;
  margin-top: 0;
}
swiper-item{
  border-left: none;
}
.banMove{
  height: 80rpx;
  width: 100%;
  z-index: 1001;
  position: absolute;
  top: 0;
  left: 0;
}

.orderList {
  width: 100%;
  height: 100%;
  align-items: none;
  font-size: 32rpx;
}

.listItem {
  padding: 20rpx 40rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
}

.itemProperty {
  width: 50%;
  display: inline-block;
}

.itemTitle {
  color: #999;
  font-size: 28rpx;
}

.itemDetail {
  display: block;
}

.price {
  color: red;
}

.inputMsg {
  display: block;
  margin-bottom: 30rpx;
  color: #000;
  padding: 6rpx 20rpx;
  border-left: 2rpx solid #a9a9a9;
}

.nullOrder {
  width: 60%;
  height: 35%;
  padding: 0;
  box-sizing: border-box;
  top: 255rpx;
  left: 150rpx;
}

/* 第三种 */

.listItem {
  display: flex;
  flex-wrap: wrap;
}

.item {
  width: 100%;
  display: flex;
  position: relative;
  justify-content: space-between;
  text-align: left;
  line-height: 80rpx;
}

.pos {
  justify-content: flex-start;
}

.pos .msg {
  padding-right: 25rpx;
}

.pos view:nth-of-type(3) {
  width: 35rpx;
}

.timeAndPrice .msg:nth-of-type(2) {
  width: 55%;
}

.timeAndPrice .msg:nth-of-type(3) {
  width: 45%;
}

.title {
  width: 4rpx;
  height: 40rpx;
  background: #a9a9a9;
  position: absolute;
  top: 22rpx;
}

.msg {
  padding-left: 20rpx;
}

.icon-iconfontzhizuobiaozhun47 {
  font-size: 36rpx;
}

.icon-accountfilling, .icon-motuoche {
  font-size: 28rpx;
  color: #f06f7f;
}

.icon-motuoche {
  font-size: 36rpx;
}
