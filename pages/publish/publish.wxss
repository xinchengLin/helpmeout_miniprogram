/* pages/publish/publish.wxss */
page{
  height: 100%;
}
.container{
  padding: 0;
  justify-content: flex-start;
}

.tipText{
  margin-bottom: 20rpx;
}

form{
  width: 94%;
  box-sizing: border-box;
  margin: 0rpx auto 30rpx; 
  font-size:32rpx;
  background: #fff;
  padding:30rpx 20rpx;
  border-radius: 12rpx;
}

.category{
  display: flex;
  flex-direction: row;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 15px;
}
.title{
  width: 30%;
}
.input{
  width: 60%;
}
icon{
  width: 10%;
  margin-top: 8rpx;
}
.line{
  border: 1px solid #cccccc;
  opacity: 0.2;
}
.buttonClass{
  width: 54%;
  margin: 50rpx auto 20rpx;
  font-size: 32rpx;
}
label{
  margin-right: 30rpx;                    
}
.goTime{
  margin-bottom: 0rpx;
}
picker{
  width: 25%;
  display: inline-block;
  text-align: left;
  line-height: 60rpx
}